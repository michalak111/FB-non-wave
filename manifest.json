{
  "manifest_version": 2,

  "name": "FB-non-wave",
  "description": "Remove wave hande from facebook.com",
  "version": "1.0",
  "author": "Jan Michalak",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*", "https://facebook.com/*", "https://web.facebook.com/*"],
      "css": ["style.css"]
    }
  ]
}